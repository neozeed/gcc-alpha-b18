srcdir = .

SHELL = /bin/sh

TOP = ../..
SRCTOP = ../..
TARGETDOC = ../targetdep.tex

#### Host, target, and site specific Makefile fragments come in here.
###

OFILES = closedir.o opendir.o readdir.o rewinddir.o scandir.o seekdir.o \
	telldir.o execl.o execle.o execlp.o execv.o execve.o execvp.o \
	popen.o creat.o isatty.o

all: lib.a

lib.a: $(OFILES)
	rm -f $@
	$(AR) $(AR_FLAGS) $@ $(OFILES)

doc:
	@echo "No doc for posix yet"

clean mostlyclean:
	rm -f $(OFILES) *~ core $(CHEWOUT_FILES) *.o.* *.ref lib.a

distclean maintainer-clean realclean: clean
	rm -f Makefile config.status

Makefile: Makefile.in $(host_makefile_frag) $(target_makefile_frag)
	$(SHELL) config.status

# to support SunOS VPATH
closedir.o: closedir.c
opendir.o: opendir.c
readdir.o: readdir.c
rewinddir.o: rewinddir.c
scandir.o: scandir.c
seekdir.o: seekdir.c
telldir.o: telldir.c
execl.o: execl.c
execle.o: execle.c
execlp.o: execlp.c
execv.o: execv.c
execve.o: execve.c
execvp.o: execvp.c
popen.o: popen.c
creat.o: creat.c
isatty.o: isatty.c
