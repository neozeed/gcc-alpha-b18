srcdir = .

SHELL = /bin/sh

TOP = ../..
SRCTOP = ../..
TARGETDOC = ../targetdep.tex

#### Host, target, and site specific Makefile fragments come in here.
###

OFILES=	\
	asctime.o	\
	asctime_r.o	\
	clock.o		\
	ctime.o		\
	ctime_r.o	\
	difftime.o	\
	gmtime.o	\
	gmtime_r.o	\
	lcltime.o	\
	lcltime_r.o	\
	mktime.o	\
	strftime.o  	\
	time.o

CHEWOUT_FILES= \
	asctime.def	\
	clock.def 	\
	ctime.def	\
	difftime.def	\
	gmtime.def	\
	lcltime.def	\
	mktime.def	\
	strftime.def	\
	time.def


all: lib.a
lib.a: $(OFILES)
	rm -f $@
	$(AR) $(AR_FLAGS) $@ $(OFILES)

doc: $(CHEWOUT_FILES)
	cat $(srcdir)/time.tex >> $(TARGETDOC)

clean mostlyclean:
	rm -f $(OFILES) $(CHEWOUT_FILES) *.o.* *.ref *~ lib.a

distclean maintainer-clean realclean: clean
	rm -f Makefile config.status

Makefile: Makefile.in $(host_makefile_frag) $(target_makefile_frag)
	$(SHELL) config.status

# to support SunOS VPATH
asctime.o: asctime.c
asctime_r.o: asctime_r.c
clock.o: clock.c
ctime.o: ctime.c
ctime_r.o: ctime_r.c
difftime.o: difftime.c
gmtime.o: gmtime.c
gmtime_r.o: gmtime_r.c
lcltime.o: lcltime.c
lcltime_r.o: lcltime_r.c
mktime.o: mktime.c
strftime.o: strftime.c
time.o: time.c
