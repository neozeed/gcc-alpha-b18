srcdir = .

SHELL = /bin/sh

TOP = ../..
SRCTOP = ../..
TARGETDOC = ../targetdep.tex

#### Host, target, and site specific Makefile fragments come in here.
###

OFILES=\
	closer.o\
	reent.o\
	impure.o\
	execr.o\
	fstatr.o\
	linkr.o\
	lseekr.o\
	openr.o\
	readr.o\
	signalr.o\
	sbrkr.o\
	statr.o\
	timer.o\
	writer.o

CHEWOUT_FILES=\
	closer.def\
	reent.def\
	execr.def\
	fstatr.def\
	linkr.def\
	lseekr.def\
	openr.def\
	readr.def\
	signalr.def\
	sbrkr.def\
	statr.def\
	timer.def\
	writer.def

all: lib.a
lib.a: $(OFILES)
	rm -f $@
	$(AR) $(AR_FLAGS) $@ $(OFILES)

doc: $(CHEWOUT_FILES)
	cat *.ref > quickref.tex
	cat $(srcdir)/reent.tex >> $(TARGETDOC)

clean mostlyclean:
	rm -f $(OFILES) $(CHEWOUT_FILES) *.ref *~ quickref.tex core *.o.* lib.a

distclean maintainer-clean realclean: clean
	rm -f Makefile config.status

# to support SunOS VPATH
reent.o: reent.c
closer.o: closer.c
impure.o: impure.c
execr.o: execr.c
fstatr.o: fstatr.c
linkr.o: linkr.c
lseekr.o: lseekr.c
openr.o: openr.c
readr.o: readr.c
signalr.o: signalr.c
sbrkr.o: sbrkr.c
statr.o: statr.c
timer.o: timer.c
writer.o: writer.c

Makefile: Makefile.in $(target_makefile_frag) $(host_makefile_frag)
	$(SHELL) config.status
